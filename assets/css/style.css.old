body {
	font-family: 'Arial', 'Helvetica Neue', Helvetica, sans-serif;
	color: #777777;
	}

div.page {
	width: 960px;
	margin: 0 auto;
	background-image: url("escheresque_ste.png");
	}

h1 {

	background-color: #4aaaa5;
	color: #ffffff;
}

h2, h3 {
	font-family: 'Georgia', Times, 'Times New Roman', serif;
	color: #4aaaa5;
}

#name {
	padding: 8px;
	text-align: center;
	float: left;
}

#nav {
	float: left;
	padding: 8px;
	margin-top: 15px;
	position: relative;
	left: 40%;
	color: #777777;

}


#nav li {
	text-decoration: none;
	display: inline;
	margin: 5px;
	border-right: 1px;

}


/*Alternate nav bar CSS.  Uncomment this along with corresponding
HTML and comment the header tags above to reveal.*/

ul {
	list-style-type: none;
	margin: 0;
	padding: 0;
	overflow: hidden;
	background-color: #f3f3f3;
}

li {
	float: left;
}


li#name {
	font-size: 18px;
}

li a{
	display: block;
	text-align: center;
	padding: 25px 15px;
	text-decoration: none;
}

li a:hover:not(.active) {
	background-color: #ddd;
}

li a.active {
	color: white;
	background-color: #4aaaa5;
}

.floatleft {

	float: left;
	margin: 10px 10px;
}

div.aboutme {
	width: 550px;
	margin-left: 30px;
	margin-top: 80px;
	margin-bottom: 40px;
	padding: 10px;
	border: 2px solid black;
	float: left;
	background-color: white;
}

div.aboutme p {
	line-height: 2.0em;
}

div.form {
	width: 550px;
	margin-left: 30px;
	margin-top: 80px;
	margin-bottom: 40px;
	padding: 20px;
	border: 2px solid black;
	float: left;
	background-color: white;
}

div.portfolio {
	width: 550px;
	margin-left: 30px;
	margin-top: 80px;
	margin-bottom: 40px;
	padding: 20px;
	border: 2px solid black;
	float: left;
	background-color: white;
}

div.container {
	position: relative;
	float: left;
	margin: 5px;
}

div.overlay {
	position: absolute;
	top: 73%;
	padding: 8px;
	color: white;
	background-color: #4aaaa5;
	font-size: 24px;
	width: 94%;
	font-family: 'Georgia', Times, 'Times New Roman', serif;
	text-align: center;
	}

div.form input {
	width: 40%;
	padding: 5px 8px;
	margin: 4px;
}

input[type=text]:focus {
	background-color: lightblue;
}

textarea {
    width: 80%;
    height: 150px;
    padding: 12px 20px;
    box-sizing: border-box;
    border: 2px solid #ccc;
    border-radius: 4px;
    background-color: #f8f8f8;
    resize: none;
}

input[type=submit] {
    background-color: #4aaaa5;
    border: none;
    color: white;
    padding: 16px 32px;
    text-decoration: none;
    margin: 4px 2px;
    cursor: pointer;
}

aside {
	width: 270px;
	height: 180px;
	margin-top: 80px;
	margin-right: 30px;
	padding: 10px;
	border: 2px solid black;
	float: right;
	background-color: white;
}

aside h2 {

	text-align: center;
}

aside a {
	text-decoration: none;
}

aside img {
	
	margin-left: 15px;
}

footer {
	margin: 0px;
	height: 85px;
	clear: both;
	background-color: #666666;
	color: #ffffff;
	text-align: center;
	border-top: 10px solid #4aaaa5;
}
